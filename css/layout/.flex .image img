/* .flex の中にある .image の中の img にスタイルを当てる */

.flex .image img {

  width: 100%;              /* 横幅を親要素いっぱい（100%）に広げる */

  height: 700px;            /* 高さを700pxに固定する */

  object-fit: cover;        /* 縦横比を保ったまま枠いっぱいに表示（はみ出た部分は切れる） */

  vertical-align: bottom;   /* 画像の下にできる小さな隙間をなくす */
}




/* .flex の中にある .recipe の中の .content-title にスタイルを当てる */
.flex .recipe .content-title {

  border-bottom: solid 1px #ccc;  /* 下に1pxのグレー(#ccc)の線を引く */

  font-size: 1.25rem;             /* 文字サイズを1.25remにする（親の基準サイズの1.25倍） */

  padding-bottom: 5px;            /* 文字と下線の間に5pxの内側余白をつける */

  margin: 40px 0 15px 0;          /* 外側余白：上40px、右0、下15px、左0 */
}
